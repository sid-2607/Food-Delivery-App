                        android:layout_height="wrap_content"
                        android:text="Rs 20.45"
                        android:layout_marginBottom="12dp"
                        tools:layout_editor_absoluteX="305dp"
                        tools:layout_editor_absoluteY="53dp" />

                    <TextView
